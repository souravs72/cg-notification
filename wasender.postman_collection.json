{
  "info": {
    "name": "WaSender WhatsApp API â€“ Complete Collection",
    "description": "Complete WaSender API collection including Sessions, Messages, Media, Logs, Presence, and User APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{base_url}}"
    },
    {
      "key": "whatsappSession",
      "value": "{{whatsappSession}}"
    },
    {
      "key": "api_key",
      "value": "{{api_key}}"
    },
    {
      "key": "access_token",
      "value": "{{access_token}}"
    },
    {
      "key": "msgId",
      "value": "{{msgId}}"
    },
    {
      "key": "failed_message_id",
      "value": "{{failed_message_id}}"
    },
    {
      "key": "page",
      "value": "{{page}}"
    },
    {
      "key": "per_page",
      "value": "{{per_page}}"
    }
  ],
  "item": [
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Get All WhatsApp Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions"]
            }
          }
        },
        {
          "name": "Create WhatsApp Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Session\",\n  \"phone_number\": \"+1234567890\",\n  \"account_protection\": true,\n  \"log_messages\": true,\n  \"read_incoming_messages\": false,\n  \"webhook_url\": \"https://example.com/webhook\",\n  \"webhook_enabled\": true,\n  \"webhook_events\": [\"messages.received\", \"session.status\", \"messages.update\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions"]
            }
          }
        },
        {
          "name": "Get WhatsApp Session Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}"]
            }
          }
        },
        {
          "name": "Update WhatsApp Session",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Session Name\",\n  \"log_messages\": true,\n  \"webhook_enabled\": true,\n  \"webhook_events\": [\"messages.received\", \"session.status\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}"]
            }
          }
        },
        {
          "name": "Delete WhatsApp Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}"]
            }
          }
        },
        {
          "name": "Connect WhatsApp Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}/connect",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}", "connect"]
            }
          }
        },
        {
          "name": "Get WhatsApp Session QR Code",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}/qrcode",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}", "qrcode"]
            }
          }
        },
        {
          "name": "Disconnect WhatsApp Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}/disconnect",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}", "disconnect"]
            }
          }
        },
        {
          "name": "Get WhatsApp Session Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/status",
              "host": ["{{base_url}}"],
              "path": ["api", "status"]
            }
          }
        },
        {
          "name": "Get Message Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}/message-logs?page={{page}}&per_page={{per_page}}",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}", "message-logs"],
              "query": [
                {
                  "key": "page",
                  "value": "{{page}}"
                },
                {
                  "key": "per_page",
                  "value": "{{per_page}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Session Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/whatsapp-sessions/{{whatsappSession}}/session-logs?page={{page}}&per_page={{per_page}}",
              "host": ["{{base_url}}"],
              "path": ["api", "whatsapp-sessions", "{{whatsappSession}}", "session-logs"],
              "query": [
                {
                  "key": "page",
                  "value": "{{page}}"
                },
                {
                  "key": "per_page",
                  "value": "{{per_page}}"
                }
              ]
            }
          }
        }
      ]
    },
