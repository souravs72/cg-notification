# =========================
# General
# =========================
SPRING_PROFILES_ACTIVE=local

# =========================
# Database (PostgreSQL)
# =========================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/notification_db
SPRING_DATASOURCE_USERNAME=notification_user
SPRING_DATASOURCE_PASSWORD=notification_pass

# =========================
# Kafka
# =========================
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# =========================
# Admin / Internal APIs
# =========================
ADMIN_API_KEY=change-me

# =========================
# Wasender (WhatsApp)
# =========================
WASENDER_API_KEY=replace-with-real-key
WASENDER_API_BASE_URL=https://wasenderapi.com/api

# =========================
# SendGrid (Email)
# =========================
SENDGRID_API_KEY=replace-with-real-key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=Notification Service

# =========================
# File Uploads (notification-api)
# =========================
FILE_UPLOAD_DIR=/app/uploads
FILE_UPLOAD_BASE_URL=http://localhost:8080/files

# =========================
# Server Ports (optional)
# =========================
NOTIFICATION_API_PORT=8080
EMAIL_WORKER_PORT=8081
WHATSAPP_WORKER_PORT=8082
